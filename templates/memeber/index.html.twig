{% extends 'base.html.twig' %}

{% block title %}List of Members{% endblock %}

{% block body %}

<div class="row my-5">
      <div class="col-md-10 mx-auto">
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
          {{message}}
        </div>
        {% endfor %}
        <div class="card">
         <div class="card-header d-flex justify-content-between align-items-center">
            <span>List Of Members</span>
            <a href="{{path('memeber_add')}}" class="btn btn-sm btn-primary">Add</a>
         </div>   
         <div class="card-body">
            <table id="table_id" class="table table-bordred table-hover">
              <thead>
                <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Departement</th>
                        <th>Action</th>
                </tr>
              </thead>
              <tbody>
                  {% for member in members %}
                     <tr>
                        <td>{{loop.index}}</td>
                        <td>{{member.fullName}}</td>
                        <td>{{member.position}}</td>
                        <td>{{member.rayon.name}}</td>
                    
                          <td class=" justify-content-around align-item-center">
                            <a href="{{path('memeber_edit',{id: member.id})}}" class="btn btn-sm btn-warning">Edit</a>
                            <form id="{{member.id}}" action="{{path('memeber_delete',{id: member.id})}}" method="post"></form>
                            <button onclick="deleteItem('{{member.id}}')" class="btn btn-sm btn-danger" type="submit">Delete</button>
                          </td>
                        
                     </tr>
                  {% endfor %}   
              </tbody>
            </table>
         </div>     
         </div>
      </div>
    </div>

{% endblock %}
