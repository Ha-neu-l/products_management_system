{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black mt-4 mb-4 shadow-lg"  style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-8 col-lg-5 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                {{ form_start(registrationForm, {'class':'mx-1 mx-md-4'}) }}
                
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{ form_row(registrationForm.username, {'class':'form-control'}, { 'label': 'Your name' }) }}
                    </div>
                  </div>

               
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{ form_row(registrationForm.plainPassword, {'class':'form-control'}, {'label':'Password'}) }}
                    </div>
                  </div>

            
                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                  </div>
                {{ form_end(registrationForm) }}
              </div>
              <div class="col-md-5 col-lg-3 col-xl-3 d-flex align-items-center order-1 order-lg-2">
                <img src="uploads/login.png" class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
